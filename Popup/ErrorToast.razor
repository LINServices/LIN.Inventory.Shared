@inject IJSRuntime JSRuntime

<div id="my-toast" class="-translate-x-1/2 fixed left-1/2 top-5 z-50 hidden w-full justify-center">


    <div class="mx-3 mb-4 flex w-full rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-800 dark:border-red-400 dark:bg-zinc-800 dark:text-red-400 dl:max-w-lg" role="alert">
        <svg class="me-3 mt-[2px] inline h-4 w-4 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
        </svg>
        <span class="sr-only">Danger</span>
        <div>
            <span class="font-medium">@Text</span>
        </div>
    </div>


</div>


@code {

    public string Text { get; set; }

    public void ShowErrorToast(string message)
    {
        Text = message;
        StateHasChanged();
        JSRuntime.InvokeVoidAsync("showToast", "my-toast");
    }
}