@using LIN.Types.Inventory.Enumerations

<div @onclick="SendEvent" class="mt-2 flex items-center justify-between rounded-lg bg-white p-3 shadow-sm dark:bg-zinc-900">

    <div class="flex items-center">
        <div class="flex h-10 w-10 items-center justify-center overflow-hidden rounded-full bg-gray-100 dark:bg-zinc-800">
            <span class="font-medium text-gray-600 dark:text-gray-300">@Global.Utilities.Strings.GetInitials(Model.Nombre ?? "")</span>
        </div>

        <div class="ml-2 flex flex-col">
            <label class="text-sm font-bold text-zinc-700 dark:text-zinc-300">@(Model.Nombre ?? "Sin nombre")</label>
            <label class="-mt-1 text-xs text-zinc-600 dark:text-zinc-400">@(Model.Usuario ?? "Sin usuario")</label>
        </div>
    </div>
    <div class="flex">

        @if (Model?.State == InventoryAccessState.Accepted)
        {
            <span class="me-2 inline-flex h-6 w-6 items-center justify-center rounded-full bg-blue-100 text-sm font-semibold text-blue-800 dark:bg-blue-500/15 dark:text-blue-400">
                <svg class="h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path fill="currentColor" d="m18.774 8.245-.892-.893a1.5 1.5 0 0 1-.437-1.052V5.036a2.484 2.484 0 0 0-2.48-2.48H13.7a1.5 1.5 0 0 1-1.052-.438l-.893-.892a2.484 2.484 0 0 0-3.51 0l-.893.892a1.5 1.5 0 0 1-1.052.437H5.036a2.484 2.484 0 0 0-2.48 2.481V6.3a1.5 1.5 0 0 1-.438 1.052l-.892.893a2.484 2.484 0 0 0 0 3.51l.892.893a1.5 1.5 0 0 1 .437 1.052v1.264a2.484 2.484 0 0 0 2.481 2.481H6.3a1.5 1.5 0 0 1 1.052.437l.893.892a2.484 2.484 0 0 0 3.51 0l.893-.892a1.5 1.5 0 0 1 1.052-.437h1.264a2.484 2.484 0 0 0 2.481-2.48V13.7a1.5 1.5 0 0 1 .437-1.052l.892-.893a2.484 2.484 0 0 0 0-3.51Z" />
                    <path fill="#fff" d="M8 13a1 1 0 0 1-.707-.293l-2-2a1 1 0 1 1 1.414-1.414l1.42 1.42 5.318-3.545a1 1 0 0 1 1.11 1.664l-6 4A1 1 0 0 1 8 13Z" />
                </svg>
                <span class="sr-only">Icon description</span>
            </span>
        }
        else
        {
            <span class="me-2 inline-flex h-6 w-6 items-center justify-center rounded-full bg-orange-100 text-sm font-semibold dark:bg-orange-500/15">

                <svg class="h-3 w-3 fill-orange-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M256 0a256 256 0 1 1 0 512A256 256 0 1 1 256 0zM232 120V256c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2V120c0-13.3-10.7-24-24-24s-24 10.7-24 24z" /></svg>

                <span class="sr-only">Icon description</span>
            </span>
        }

        @if (State)
        {

            <span class="flex items-center rounded-2xl border border-gray-500 bg-zinc-100 px-3 py-1 text-xs font-medium text-gray-800 dark:bg-zinc-500/20 dark:text-gray-400">
                <span class="mr-2 inline-flex h-3 w-3 items-center justify-center rounded-full text-sm font-semibold text-gray-800 dark:text-gray-300">
                    <svg class="h-full w-full" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z" />
                    </svg>
                    <span class="sr-only">Icon description</span>
                </span>
                @Model.Rol
            </span>

        }
        else
        {
            <span class="me-2 rounded-2xl border border-yellow-300 px-3 py-1 text-xs font-medium text-yellow-800 dark:text-yellow-300">No invitado</span>
        }

    </div>

</div>