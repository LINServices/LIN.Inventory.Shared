@inject IJSRuntime js

<div class="w-full rounded-lg bg-white p-4 shadow dark:bg-zinc-900 md:p-6">
    <div class="flex justify-between">
        <div @onclick="StateHasChanged">
            <h5 class="mt-2 pb-1 text-3xl font-bold leading-none text-gray-900 dark:text-white">@Value</h5>
            <p class="text-base font-normal text-gray-500 dark:text-gray-400">Ventas esta semana</p>
        </div>

        <div class="flex items-center px-2.5 py-0.5 text-center text-base font-semibold @(Percent.StartsWith('-') ? "text-red-500 dark:text-red-500":"text-green-500 dark:text-green-500")">

            @(Percent)%
            <svg class="ms-1 h-3 w-3 @(Percent.StartsWith('-') ? "rotate-180":"")" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13V1m0 0L1 5m4-4 4 4" />
            </svg>
        </div>


    </div>
    <div id="area-chart">
        @if (HomeDto?.WeekSales == null)
        {
            <div class="flex w-full items-center justify-center py-6">
                <Loader></Loader>
            </div>
        }
        else if (HomeDto?.WeekSales.Count <= 0)
        {
            <div class="flex w-full items-center justify-center py-6">
                <div class="border-2 mt-3 flex w-full items-center justify-center rounded-lg border-dashed border-gray-400 py-10 dark:border-current-500">
                    <label class="text-gray-400 dark:text-current-500">No hay datos suficientes</label>
                </div>
            </div>
        }
    </div>
    <div class="grid-cols-1 grid items-center justify-between border-t border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between pt-5">
            <a @onclick="OnRefresh" class="inline-flex items-center rounded-lg px-3 py-2 text-sm font-semibold uppercase text-current-600 hover:text-current-700 hover:bg-gray-100 dark:border-gray-700 dark:hover:text-current-500 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                Reporte completo
                <svg class="ms-1.5 h-2.5 w-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
                </svg>
            </a>
        </div>
    </div>
</div>
